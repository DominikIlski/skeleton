{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "declaration": true,
    "removeComments": true
  },
  "include": ["src/**/*.ts"],
  "typeRoots": ["./src/types/express.d.ts" ],
  "exclude": ["node_modules"],
  "baseUrl": "./",
  "paths": {
    "*": ["src/*"]
  },
  "types": ["node"],
  "lib": ["ES6", "ES2015", "ES2017", "ES2018", "ES2019"],
  "strict": true,
  "noImplicitAny": true
}
